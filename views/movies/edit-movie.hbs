<div class="edit-movie">
    <div class="container">

        <div class="row justify-content-center">
            <div class="col-md-8">

                <h1>Edit {{movie.title}}</h1>
                <hr>
                <form action="/movies/edit-movie/{{movie.id}}" method="POST">
                    <div class="mb-3 mt-5">
                        <label for="movieTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="movieTitle" name="title" value="{{movie.title}}">
                    </div>

                    <div class="mb-3">
                        <label for="moviePlot" class="form-label">Plot</label>
                        <input type="text" class="form-control" id="moviePlot" name="plot" value="{{movie.plot}}">
                    </div>

                    <div class="mb-3 ">
                        <label for="movieGenre" class="form-label">Autor/a</label>
                        <input type="text" class="form-control" id="movieGenre" name="genre" value="{{movie.genre}}">
                    </div>

                    <div class="col-12 mb-3 mt-5">
                        <label for="movieCast" class="form-label">Movie cast</label>
                        <select class="form-select" name="cast" multiple>
                            {{#each celebsFromDB}}
                            <option value="{{_id}}">{{name}}</option>
                            {{/each}}
                        </select>


                        <button type="submit" class="btn btn-dark">Save edit</button>
                </form>

            </div>
        </div>



    </div>
</div>